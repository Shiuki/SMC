<Window x:Class="sm_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sm_chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF292626" Foreground="Gainsboro">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="381" Margin="10,10,0,0" VerticalAlignment="Top" Width="757" BorderThickness="0" Padding="2" UseLayoutRounding="False">
            <TabControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </TabControl.Background>
            <TabItem Header="TODO">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Login">
                <Grid Background="#FF292626">
                    <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="10,311,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
