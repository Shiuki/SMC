<Window x:Class="sm_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sm_chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF292626" Foreground="Gainsboro">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="381" Margin="10,10,0,0" VerticalAlignment="Top" Width="757" BorderThickness="0" Padding="2" UseLayoutRounding="False">
            <TabControl.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF9700FF" Offset="1"/>
                </LinearGradientBrush>
            </TabControl.Background>
            <TabItem x:Name="loadtab" Header="Load">
                <Grid Background="#FF292626" Loaded="Grid_Loaded"/>
            </TabItem>
            <TabItem x:Name="registertab" Header="Register">
                <Grid Background="#FF292626"/>
            </TabItem>
            <TabItem x:Name="defaulttab" Header="Defaultscr">
                <Grid Background="#FF292626"/>
            </TabItem>
            <TabItem x:Name="logintab" Header="Login">
                <Grid Background="#FF292626">
                    <Button x:Name="loginbtn" Content="Login" HorizontalAlignment="Left" Margin="313,183,0,0" VerticalAlignment="Top" Width="75" Click="loginbtn_Click" IsDefault="True"/>
                    <TextBox x:Name="Username" HorizontalAlignment="Left" Height="23" Margin="288,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CaretBrush="#FF62B73A" Foreground="#FF62B73A" GotKeyboardFocus="Username_GotKeyboardFocus" LostKeyboardFocus="Username_LostKeyboardFocus"/>
                    <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="288,127,0,0" VerticalAlignment="Top" Width="120" Foreground="#FF62B73A" CaretBrush="#FF62B73A" GotKeyboardFocus="Password_GotKeyboardFocus" LostKeyboardFocus="Password_LostKeyboardFocus"/>
                    <Label x:Name="namelabel" Content="Name" HorizontalAlignment="Left" Margin="288,98,0,0" VerticalAlignment="Top" Foreground="#FF62B73A" IsHitTestVisible="False"/>
                    <Label x:Name="passlabel" Content="Password" HorizontalAlignment="Left" Margin="288,128,0,0" VerticalAlignment="Top" Foreground="#FF62B73A" IsHitTestVisible="False"/>
                    <CheckBox x:Name="register" Content="New account" HorizontalAlignment="Left" Margin="288,157,0,0" VerticalAlignment="Top" Foreground="#FF62B73A" Click="register_Click" IsTabStop="False"/>
                    <Label x:Name="emaillabel" Content="Email" HorizontalAlignment="Left" Margin="288,226,0,0" VerticalAlignment="Top" Foreground="#FF62B73A" IsHitTestVisible="False"/>
                    <TextBox x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="288,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" CaretBrush="#FF62B73A" Foreground="#FF62B73A" GotKeyboardFocus="Email_GotKeyboardFocus" LostKeyboardFocus="Email_LostKeyboardFocus"/>
                    <Button x:Name="registerbtn" Content="Register" HorizontalAlignment="Left" Margin="310,255,0,0" VerticalAlignment="Top" Width="84" Click="registerbtn_Click" IsDefault="True"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
